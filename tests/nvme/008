# Test NVMeOF host creation.

. tests/nvme/rc

DESCRIPTION="create an NVMeOF host"
QUICK=1

requires() {
	_nvme_requires
	_have_loop
	_require_nvme_trtype_is_fabrics
}

set_conditions() {
	_set_combined_conditions _set_nvme_trtype _set_nvmet_blkdev_type "$@"
}

test() {
	echo "Running ${TEST_NAME}"

	_setup_nvmet

	local nvmedev

	_nvmet_target_setup

	_nvme_connect_subsys

	nvmedev=$(_find_nvme_dev)
	_check_uuid "${nvmedev}"

	_nvme_disconnect_subsys

	_nvmet_target_cleanup

	echo "Test complete"
}

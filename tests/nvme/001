DESCRIPTION="enable nvme_setup_nvm_cmd trace point and submit I/O to the device"

QUICK=1

requires() {
	tfspath=/sys/kernel/debug/tracing

	if findmnt -t tracefs ${tfspath} > /dev/null; then
		return 0;
	elif [[ -d ${tfspath}/events/nvme/nvme_setup_nvm_cmd ]]; then
		return 0;
	else
		return 1;
	fi
}

filter_trace() {
	sed -r -e  "s/dd-[0-9]+/dd-XXX/" \
		-e "s/\[[0-9]+\]/[XXX]/" \
		-e "s/\.{4}\s+/....    /" \
		-e "s/[0-9]+\.[0-9]+/X.XXXXXX/" \
		-e "s/qid=[0-9-]+/qid=X/" \
		-e "s/nsid=[0-9-]+/nsid=X/" \
		-e "s/cmdid=[0-9-]+/cmdid=X/"
}

test_device() {
	local tfspath=/sys/kernel/debug/tracing
	local tfsinstance=${tfspath}/instances/blktests

	echo "Running ${TEST_NAME}"

	mkdir ${tfsinstance}

	echo 1 > ${tfsinstance}/events/nvme/nvme_setup_nvm_cmd/enable

	dd if=${TEST_DEV} of=/dev/null iflag=direct bs=512 count=1 \
		>>$FULL 2> /dev/null

	cat ${tfsinstance}/trace | filter_trace

	echo 0 > ${tfsinstance}/events/nvme/nvme_setup_nvm_cmd/enable

	rmdir ${tfsinstance}

	echo "Test complete"
}
